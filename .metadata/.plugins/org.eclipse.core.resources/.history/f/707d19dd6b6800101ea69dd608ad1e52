package com.banking.module;


import java.util.Scanner;

public class BankMain {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        BankServiceImpl bank = new BankServiceImpl();

        // Sample predefined accounts
        bank.addAccount(new SavingsAccount(101, "Rahul Sharma", 5000));
        bank.addAccount(new CurrentAccount(102, "Hammad Afroz", 10000));

        while (true) {
            System.out.println("\n1.Deposit\n2.Withdraw\n3.Check Balance\n4.Exit");
            System.out.print("Enter your choice: ");
            int choice = sc.nextInt();

            if (choice == 4) break;

            System.out.print("Enter Account Number: ");
            int accNo = sc.nextInt();

            switch (choice) {
                case 1:
                    System.out.print("Enter amount to deposit: ");
                    double depositAmt = sc.nextDouble();
                    bank.deposit(accNo, depositAmt);
                    break;
                case 2:
                    System.out.print("Enter amount to withdraw: ");
                    double withdrawAmt = sc.nextDouble();
                    bank.withdraw(accNo, withdrawAmt);
                    break;
                case 3:
                    bank.checkBalance(accNo);
                    break;
                default:
                    System.out.println("Invalid choice");
            }
        }

        sc.close();
        System.out.println("Thank you for using the banking system.");
    }
}
