package helloworld;

import java.util.ArrayList;
import java.util.Scanner;

class Patient {
    private String name;
    private int age;
    private String disease;

    public Patient(String name, int age, String disease) {
        this.name = name;
        this.age = age;
        this.disease = disease;
    }

    public String getName() {
        return name;
    }

    public void show() {
        System.out.println("Name: " + name + " | Age: " + age + " | Disease: " + disease);
    }
}

public class HospitalOpd {
    public static void main(String[] args) {
        ArrayList<Patient> list = new ArrayList<>();
        Scanner sc = new Scanner(System.in);

        list.add(new Patient("Vinay Bhat", 45, "Fever"));
        list.add(new Patient("Sonali Langar", 40, "Cough"));
        list.add(new Patient("Renu Sai", 30, "Pain"));

        while (true) {
            System.out.println("\n1. Add Patient\n2. Show All\n3. Search by Name\n4. Exit");
            System.out.print("Choice: ");
            int ch = Integer.parseInt(sc.nextLine());

            if (ch == 1) {
                System.out.print("Name: ");
                String name = sc.nextLine();
                System.out.print("Age: ");
                int age = Integer.parseInt(sc.nextLine());
                System.out.print("Disease: ");
                String disease = sc.nextLine();
                list.add(new Patient(name, age, disease));
                System.out.println("Added.");
            } else if (ch == 2) {
                for (Patient p : list) p.show();
            } else if (ch == 3) {
                System.out.print("Search Name: ");
                String name = sc.nextLine();
                boolean found = false;
                for (Patient p : list) {
                    if (p.getName().equalsIgnoreCase(name)) {
                        p.show();
                        found = true;
                    }
                }
                if (!found) System.out.println("Patient not found.");
            } else if (ch == 4) {
                System.out.println("Goodbye.");
                break;
            } else {
                System.out.println("Invalid choice.");
            }
        }

        sc.close();
    }
}
